<PlayerContent>:
    orientation: 'vertical'
    spacing: dp(15)
    padding: dp(15)

    BoxLayout:
        spacing: dp(10)
        padding: dp(10)
        pos_hint: {"center_x": 0.5}

        MDButton:
            on_release: app.previous_sound()
            style: "text"
            pos_hint: {"center_x": 0.5}
            MDButtonIcon:
                icon: "skip-previous"

        MDButton:
            on_release: app.play_sound()
            style: "text"
            pos_hint: {"center_x": 0.5}
            MDButtonIcon:
                icon: "play"

        MDButton:
            on_release: app.pause_sound()
            style: "text"
            pos_hint: {"center_x": 0.5}
            MDButtonIcon:
                icon: "pause"

        MDButton:
            on_release: app.next_sound()
            style: "text"
            pos_hint: {"center_x": 0.5}
            MDButtonIcon:
                icon: "skip-next"

    MDLabel:
        text: "Volume"
        halign: "center"
        theme_text_color: "Secondary"
        theme_font_name: "Custom"
        font_name: "Anton-Regular.ttf"
        font_style: "Title"
        role: "medium"

    MDSlider:
        min: 0
        max: 1
        value: 0.5
        on_value: app.set_volume(self.value)
        size_hint_x: 0.9
        pos_hint: {"center_x": 0.5}


FloatLayout:
    FitImage:
        source: "fundo2.png"

    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: dp(10)
        spacing: dp(10)

        Widget:
            size_hint_y: None
            height: dp(10)
        
        Image:
            source: "logo.png"
            size_hint: None, None
            size: "200dp", "200dp"
            pos_hint: {"center_x": 0.5}

        MDLabel:
            text: "ODS 13 - Vida na Água"
            halign: "center"
            theme_text_color: "Custom"
            text_color: "#fafafaff"
            theme_font_name: "Custom"
            font_name: "Anton-Regular.ttf"
            font_style: "Display"
            role: "small"

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1

            MDButton:
                style: "filled"
                theme_bg_color: "Custom"
                md_bg_color: "#66CDAA"
                theme_width: "Custom"
                height: "60dp"
                size_hint_x: .9
                pos_hint: {'center_x': 0.5}
                on_release:
                    app.open_player(0)
                MDButtonIcon:
                    x: text.x - (self.width + dp(10))
                    icon: "water"
                MDButtonText:
                    text: "Microplásticos"
                    pos_hint: {'center_x': 0.5,'center_y': 0.5 }
                    theme_font_name: "Custom"
                    font_name: "Anton-Regular.ttf"
                    font_style: "Headline"
                    role: "small"
                    theme_text_color: "Custom"
